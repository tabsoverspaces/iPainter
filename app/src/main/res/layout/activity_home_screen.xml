<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dragan.ipainter.activities.HomeScreenActivity">

    <TextView
        android:id="@+id/selectedProjectLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" none "
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/closeAppButton"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/projectNameLabel"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:textSize = "20dp"/>

    <Button
        android:id="@+id/newProjectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="42dp"
        android:text="Nov proekt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.502" />

    <Button
        android:id="@+id/openProjectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Otvori proekt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/newProjectButton"
        app:layout_constraintHorizontal_bias="0.502" />

    <Button
        android:id="@+id/closeAppButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Izlez"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/projectNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected project :"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/openProjectButton"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/closeAppButton"
        android:textSize = "15dp"
        app:layout_constraintVertical_bias="0.127" />

    <Button
        android:id="@+id/goToProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Vlezi vo proekt"
        app:layout_constraintBottom_toTopOf="@+id/closeAppButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectedProjectLabel"
        app:layout_constraintVertical_bias="0.393" />
</android.support.constraint.ConstraintLayout>
